{
	"name": "hamverbot",
	"private": true,
	"type": "module",
	"module": "index.ts",
	"scripts": {
		"start": "bun run src/index.ts",
		"build": "bun build src/index.ts --minify --target bun --outfile hamverbot.ts",
		"format": "oxfmt --check .",
		"format:write": "oxfmt --write .",
		"lint": "oxlint --type-aware .",
		"lint:fix": "oxlint --type-aware . --fix",
		"typecheck": "tsgo --noEmit -p tsconfig.json"
	},
	"dependencies": {
		"@libsql/client": "^0.17.0",
		"cron": "^4.4.0",
		"dotenv": "^17.3.1",
		"irc-framework": "^4.14.0",
		"node-ical": "^0.25.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@types/bun": "^1.3.9",
		"@typescript/native-preview": "^7.0.0-dev.20260222.1",
		"oxfmt": "^0.34.0",
		"oxlint": "^1.49.0",
		"oxlint-tsgolint": "^0.14.2",
		"typescript": "^5.9.3"
	}
}
